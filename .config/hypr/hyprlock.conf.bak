# Time thing
label {
    # monitor =
    text = cmd[update:1000] echo -e "$(date +"<span foreground='##9ccfd8'>%H:%M:%S</span> %Z\n%a, %d %B %Y")"
    color = $text
    font_size = 12
    font_family = Rec Mono Casual 
    position = 96, -272
    halign = left
    valign = top
}

# helu ish thing
label {
    # monitor =
    text = Hello <span text-transform='capitalize' foreground='##eb6f92'>$USER</span>!
    color = $text
    font_size = 24
    font_family = Rec Mono Casual 
    position = 96, -224
    halign = left
    valign = top
}

shape {
    size = 3, 162
    color = rgb(524f67)
    rounding = -2
    position = 68, -224
    halign = left
    valign = top
}

