# source = $HOME/.config/hypr/wallust/wallust-hyprland.conf

general {
    # grace = 10
    hide_cursor = true
    text_trim = false
}

$text = rgb(e0def4)
$border = rgb(c4a7e7)
$bg = rgb(908caa)
$transparent = rgba(00000000)

# file:///tmp/.org.chromium.Chromium.gfgPS9

image {
    monitor =
    path = /tmp/hyprlock-music
    size = 100
    rounding = 0

    reload_time = 5
    border_size = 0
    # border_color =  rgb(191724) rgb(908caa) 90deg

    position = 100, 116
    halign = left
    valign = bottom
}

label {
    # monitor =
    text = cmd[update:1000] $HOME/.config/hypr/scripts/music.sh
    color = $text
    font_size = 14
    font_family = Rec Mono Casual 
    position = 220, 100
    halign = left
    valign = bottom
}



background {
    # monitor =
	# path = screenshot
    path = $HOME/.wallpapers/current

    # blur_size = 
    # blur_passes = 
    noise = 0
}

# Password input
input-field {
    # monitor =
    size = 230, 50
    outline_thickness = 0
    inner_color = $border
    # capslock_color = rgb() 

    check_color = $transparent

    rounding = 24

    dots_size = .25
    dots_spacing = 0
    dots_center = false
    dots_rounding = 2
    dots_text_format = <span foreground='##c4a7e7'>ó±“» </span>

    inner_color = $transparent
    font_color = $text
    fade_on_empty = false
    placeholder_text = 
    
    position = 96, -332
    halign = left
    valign = top
}

